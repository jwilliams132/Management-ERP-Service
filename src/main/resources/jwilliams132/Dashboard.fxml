<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<VBox fx:id="dashboardRoot"
    xmlns="http://javafx.com/javafx/8.0.171"
    xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="jwilliams132.Controller_Dashboard"
    styleClass="dashboardRoot">

    <!-- Search Bar -->
    <VBox spacing="20">
        <padding>
            <Insets bottom="30" left="30" right="30" top="10" />
        </padding>
        <TextField fx:id="quickSearch" promptText="Quick Search..." HBox.hgrow="ALWAYS" />
        <Separator/>
    </VBox>

    <GridPane fx:id="gridPane" styleClass="grid"  hgap="10" vgap="10">
        <padding>
            <Insets bottom="10" left="10" right="10" top="10" />
        </padding>
    </GridPane>
</VBox>